<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/rupeesInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount in Rupees"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/convertToRublesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rupeesInput"
        android:text="Convert to Rubles"/>

    <Button
        android:id="@+id/convertToEurosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertToRublesButton"
        android:text="Convert to Euros"/>

    <Button
        android:id="@+id/convertToDollarsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertToEurosButton"
        android:text="Convert to Dollars"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/convertToDollarsButton"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
